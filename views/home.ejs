    <!-- Header Section -->
    <header>
        <nav>
            <a href="#" class="logo">Art<span>Vista</span></a>
            <ul class="nav-links">
                <li><a href="#">Home</a></li>
                <li><a href="#">Gallery</a></li>
                <li><a href="#">Artists</a></li>
                <li><a href="#">Exhibitions</a></li>
